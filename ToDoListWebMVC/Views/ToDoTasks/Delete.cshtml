<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-action="Index" class="btn btn-light mt-3">Back</a>
</div>
